<form id="search-form" action="/search">
    <label for="model">Desired model: </label>
    <input type="text" id="model" name="model">
    <input class="submit-btn" type="submit" value="Search" />
</form>
{{#if cars}}
    <div id="container" style="margin-bottom: 60px">
        {{#each cars}}
        <div class="car">
            <h2>{{model}}</h2>
            <img src="{{image}}" alt="car">
            <h2 class="price">Price per day: {{pricePerDay}} &euro;</h2>

            {{#if ../user}}
            <a class="rent-btn" href="/car/rent/{{_id}}">Rent</a>
            {{/if}}

            {{#if ../isAdmin}}
            <a class="edit-btn" href="/car/edit/{{_id}}">Edit</a>
            <a class="edit-btn" href="/car/remove/{{_id}}">Remove</a>
            {{/if}}
        </div>
        {{/each}}
    </div>
{{else}}
    <h1>No cars for rent.</h1>
{{/if}}