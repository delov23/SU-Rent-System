<form class="car-form" action="/car/remove/{{_id}}" method="POST">
    <label for="carModel">Model:</label>
    <input class="input-field" type="text" id="carModel" name="model" value="{{model}}" readonly />
    <label for="image">Image:</label>
    <input class="input-field" type="url" name="image" id="image" value="{{image}}" readonly />
    <label for="pricePerDay">Price per Day:</label>
    <input class="input-field" type="number" name="pricePerDay" id="pricePerDay" value="{{pricePerDay}}" readonly />
    <input class="submit-btn" type="submit" value="Remove Car" />
</form>